  <button id="novo-artista" onclick="location.href='/artistas/novo'">â• Adicionar Novo Artista</button>
</div>

<main>
  <h2>Lista de Artistas</h2>
  <div id="ajuste">
    <div class="artist-list">
      <% artists.forEach(artista => { %>
        <div class="artist-item">
          <h3><%= artista.nome %></h3>
          <p><strong>GÃªneros:</strong> 
            <%= artista.Generos.map(genero => genero.nome).join(', ') || 'Nenhum gÃªnero associado' %>
          </p>
          <h4>Discos:</h4>
          <ul>
            <% if (artista.Albums && artista.Albums.length > 0) { %>
              <% artista.Albums.forEach(album => { %>
                <li><%= album.titulo %> (LanÃ§ado em <%= album.anoLancamento %>)</li>
              <% }) %>
            <% } else { %>
              <li>Nenhum disco associado</li>
            <% } %>
          </ul>
          <div class="artist-actions">
            <button onclick="location.href='/artistas/<%= artista.id %>/editar'">âœï¸ Editar</button>
            <form 
              action="/artistas/<%= artista.id %>?_method=DELETE" 
              method="POST" 
              class="delete-artist-form"
            >
              <button type="submit">ğŸ—‘ï¸ Remover</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<footer>
